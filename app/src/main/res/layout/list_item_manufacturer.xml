<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#424242"
    android:padding="4dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/manufacturer_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/manufacturer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/manufacturer_name_label"
        android:textSize="18sp"
        android:layout_toRightOf="@id/manufacturer_name_label" />
    <TextView
        android:id="@+id/manufacturer_family_label"
        android:layout_below="@id/manufacturer_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family: "
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/manufacturer_family"
        android:layout_toEndOf="@id/manufacturer_family_label"
        android:layout_below="@id/manufacturer_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_toRightOf="@id/manufacturer_family_label" />

</RelativeLayout>